@{
    ViewBag.Title = "Change Password";
}

@section Javascript {
    <script src="~/Scripts/Views/Home/ChangePassword.js"></script>
    @* Log In URLs *@
    <script type="text/javascript">
        var ProcessChangePassword_URL = '@Url.Action("ProcessChangePassword", "Home")';
    </script>
}

<div class="jumbotron" id="ChangePassword">
    <h2 style="text-align:center; font-weight: bold;">Change Password</h2>
    <br />
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-offset-1 col-sm-4" for="CurrentPassword">Current Password:</label>
            <div class="col-sm-7">
                <input type="password" class="form-control" id="CurrentPassword" required data-bind="textInput: CurrentPassword">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-offset-1 col-sm-4" for="NewPassword">New Password:</label>
            <div class="col-sm-7">
                <input type="password" class="form-control" id="NewPassword" required data-bind="textInput: NewPassword">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-offset-1 col-sm-4" for="RetypeNewPassword">Re-type New Password:</label>
            <div class="col-sm-7">
                <input type="password" class="form-control" id="RetypeNewPassword" required data-bind="textInput: RetypeNewPassword">
            </div>
        </div>
    </form>

    <!-- Trigger the modal with a link -->
    <div class="row">
        <div class="col-sm-offset-7 col-sm-3">
            <button type="submit" onclick="changePassword_submit()" class="btn btn-info">Change Password</button>
        </div>
    </div>   
</div>
