              // Place js vars for URIs here
              var LoadSessionStorageURL = '@Url.Action("LoadSessionStorage", @HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString())';
              var LoadSecurityURL = '@Url.Action("LoadSecurity", "Base")';
        </script>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/Chart")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/_Layout")
    @RenderSection("Javascript", required: false)
</body>

</html>
