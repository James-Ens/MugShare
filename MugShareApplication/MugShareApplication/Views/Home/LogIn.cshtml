@{
    ViewBag.Title = "LogIn";
}

@section Javascript {
    <script src="~/Scripts/Views/Home/LogIn.js"></script>
    @* Log In URLs *@
    <script type="text/javascript">
        var ProcessLogIn_URL = '@Url.Action("ProcessLogIn", "Home")';
        var ProcessForgotPassword_URL = '@Url.Action("ProcessForgotPassword", "Home")';
    </script>
}

<div class="jumbotron" id="LogIn">
    <h2 style="text-align:center; font-weight: bold;">Log In</h2>
    <br />
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-offset-1 col-sm-4" for="Username">Username:</label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="Username" required data-bind="textInput: Username">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-offset-1 col-sm-4" for="Password">Password:</label>
            <div class="col-sm-7">
                <input type="password" onkeydown="logIn_enter_event(event)" class="form-control" id="Password" required data-bind="textInput: Password">
            </div>
        </div>
    </form>

    <!-- Trigger the modal with a link -->
    <div class="row">
        <div class="col-sm-3 col-sm-offset-7" style="padding-left:55px;">
            <button type="submit" onclick="logIn_submit()" class="btn btn-info">Log In</button>
            <a class="userassistance" data-toggle="modal" data-target="#ForgotPasswordModal">Forgot Password?</a>
        </div>
    </div>

    <!-- Modal -->
    <div id="ForgotPasswordModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" style="color: white;" class="close" data-dismiss="modal">&times;</button>
                    <h2 class="modal-title" style="color: white;">Forgot Password</h2>
                </div>

                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-offset-1 col-sm-3" for="Email">Email:</label>
                            <div class="col-sm-8">
                                <input type="email" class="form-control" id="Email" required data-bind="textInput: ForgotPassword_Email">
                            </div>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="submit" onclick="forgotPassword_submit()" class="btn btn-info col-md-offset-6">Reset</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
